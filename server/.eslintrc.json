{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "import/no-extraneous-dependencies": [
            "error", { 
                "devDependencies": true 
                }
            ],
        "no-param-reassign": 1,
        "prefer-destructuring": 1,
        "no-console": 2,
        "arrow-body-style": 1,
        "linebreak-style": 0
    }
}